.nav-list
  padding: 0

  > li
    
    margin-bottom: -1px
    border: solid 1px darken($kabaBackgroundGray, 20)

    &:last-child
      border-radius: bottom right 4px

    &:not(.nav-header)::after
        position: absolute
        top: 50%
        margin-top: -8px
        right: 15px
        font-family: 'FontAwesome'
        content: "\f054"
        color: $kabaDarkGray

  // li.active 
  //   > a, a:hover
  //     border-left: solid 4px darken($kabaBackgroundGray, 20)
  //     padding: 10px 15px 10px 11px


@media screen and (min-width: 768px)
  .nav-list
    padding: 0

    > li 

      margin-bottom: 0
      border: none

      &::last-child
        border-radius: 0

      > a, .nav-header
        margin-right: 0
        margin-left: 0

      &:not(.nav-header)::after
          position: absolute
          top: 50%
          margin-top: -8px
          right: 15px
          font-family: 'FontAwesome'
          content: "\f054"
          color: $kabaOrange

    li.active 
      > a, a:hover
        background-color: $kabaMiddleBlue
        border-left: solid 4px $orange
        padding: 10px 15px 10px 11px

      &::after
        position: absolute
        top: 50%
        margin-top: -8px
        right: 15px
        font-family: 'FontAwesome'
        content: "\f054"
        color: $kabaBlue

    

