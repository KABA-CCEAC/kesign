.page
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  background: $white
  border-top: solid 15px $white

  .row-page-nav
    .col-page-nav
      .page-nav
        .nav
        
          &.nav-pills
            li
              a
                background-color: transparent
                color: $kabaBlue
                background-color: #fa
                border: solid 1px $kabaMiddleGray

                &:hover
                  background-color: $kabaLightBlue


            li.active
              a
                background-color: lighten($kabaBlue, 3)
                border: solid 1px lighten($kabaBlue, 8)
                margin-right: -1px
                color: $white

  
