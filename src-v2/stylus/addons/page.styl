.page
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: $white
// .page.page-report
//     background: #fff
//     border: solid 1px $kabaBlue

.snapjs-left .page
  left: 10px

.container > .page
  margin-left: 0

@media screen and (min-width: 768px)
  .page
    top: 0
    right: -1px
    bottom: -1px
    left: 0
    background: #f5
    padding: 15px
    border-left: solid 20px $white
    border-top: solid 20px $white
    min-height: 450px

  .snapjs-left .page
    border-left: solid 10px $white

  .page:before 
      border: solid 1px darken($kabaBackgroundGray, 20)
      content: ''
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0