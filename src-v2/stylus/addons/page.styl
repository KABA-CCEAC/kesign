@media screen and (min-width: 768px)
  .page
    position: absolute
    top: 0
    right: -1px
    bottom: -1px
    left: 0
    background: #f5
    //padding: 15px
    border-left: solid 20px $white
    border-top: solid 20px $white
    border-radius: top left 5px

    .row-page-nav
      height: 100%

      .col-page-nav
        height: 100%
        padding: 0

        .page-nav
          height: 100%
          margin: 1px 0 0 1px
          border-right: solid 1px darken($kabaBackgroundGray, 20)
          background-color: $white
          border-radius: top left 5px

          .nav
            
            &.nav-pills
              li
                a
                  background-color: transparent
                  border-radius: 0
                  margin-top: 0
                  color: $kabaBlue
                  border: none
                  border-bottom: solid 1px darken($kabaBackgroundGray, 10)
                  background-color: #fa

                  &:hover
                    background-color: #f8


              li.active
                a
                  margin-top: -1px
                  background-color: #f5
                  margin-right: -1px
                  border: none
                  border-top: solid 1px darken($kabaBackgroundGray, 20)
                  border-bottom: solid 1px darken($kabaBackgroundGray, 20)
                  color: $kabaTextGray

                &:first-child
                  a
                    margin-top: 0
                    border-top: none


  .page:before
    background: transparent
    border: solid 1px darken($kabaBackgroundGray, 20)
    border-radius: top left 4px
    content: ''
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index: -1

  .snapjs-left .page
    border-left: solid 10px $white

  .snapjs-right .page
    border-right: solid 10px $white
    border-radius: top right 5px

  .snapjs-right .page:before
    border-radius: top right 4px

