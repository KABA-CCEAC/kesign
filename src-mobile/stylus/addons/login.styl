.login-page
  height: 100%
  position: relative
  kabaLightBlue-gradient()
  // http://css-tricks.com/perfect-full-page-background-image/
  background: url(../img/login_bg.jpg) no-repeat center -120px
  background-size: cover

  .login-content
    position: absolute
    height: 50%
    width: 100%
    bottom: 0
    background: $kabaBlue

    .brandbar
      position: absolute
      top: -40px
      height: 40px
      width: 100%
      background: rgba(255, 255, 255, 0.5)

      a.brand
        display: inline-block
        height: 40px
        width: 80px
        background: url(../img/kaba_xs.gif) no-repeat

    .login-form
      padding: 10px
      margin: 0 auto
      color: $kabaLightBlue

      &.hidden
        display: none

      &.visible
        -webkit-animation: slideup 2s
        -moz-animation: slideup 2s

      form
        margin-bottom: 0

        legend
          width: 100%
          font-size: 14px
          line-height: 22px
          color: $kabaLightBlue
          margin-bottom: 0
          border: none
          margin-bottom: 5px

          label.checkbox
            font-size: 10px
            margin-right: 5px

        .fields
          input[type="password"], input[type="text"]
            border-radius: 0
            box-shadow: inset 2px 2px 4px rgba(0, 0, 0, 0.2)

        .login-actions
          margin-top: 0

          .button
            position: relative
            padding-right: 30px

            &:hover
              background-image: linear-gradient(top, #F8F8F8 0%, #D1D1D1 100%);
              box-shadow: 1px 1px 2px rgba(255, 255, 255, 0.5);

            &::after
              position: absolute
              right: 5px
              top: 5px
              font-family: 'FontAwesome'
              content: "\f054"
              color: $kabaTextGray
              margin-right: 5px

            &.button-orange::after
                position: absolute
                right: 5px
                top: 5px
                font-family: 'FontAwesome'
                content: "\f054"
                color: $white
                margin-right: 5px


    .load-progress
      text-align: center
      padding: 20px 100px
      color: $kabaLightGray

      .img-spinner
        width: 16px

/* Animations
-------------------------------------------------- */

@-webkit-keyframes slideup {
  0% {
   opacity: 0;
   -webkit-transform: translateY(20px);
  }
  50% {
   opacity: 0;
   -webkit-transform: translateY(20px);
  }
  100% {
   opacity: 1;
   -webkit-transform: translateY(0);
  }
}

@-moz-keyframes slideup {
  0% {
   opacity: 0;
   -moz-transform: translateY(20px);
  }
  50% {
   opacity: 0;
   -moz-transform: translateY(20px);
  }
  100% {
   opacity: 1;
   -moz-transform: translateY(0);
  }
}