                    .prettyprint
                      - var sample = '<div class="page page-report">\n'
                      - sample    += '  <div class="report">\n'
                      - sample    += '    <div class="report-section">\n'
                      - sample    += '      <h4>Title</h4>\n'
                      - sample    += '      <table class="table table-condensed">\n'
                      - sample    += '        <thead>...</thead>\n'
                      - sample    += '        <tbody>...</tbody>\n'
                      - sample    += '        <tfoot>...</tfoot>\n'
                      - sample    += '      </table>\n'
                      - sample    += '    </div>\n'
                      - sample    += '  </div>\n'
                      - sample    += '</div>\n'
                      
                      pre
