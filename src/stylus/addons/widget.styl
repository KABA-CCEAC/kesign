.widget    
  position: relative
  clear: both  
  width: auto  
  margin-bottom: 2em        
  overflow: hidden
  
.widget-header   
  position: relative  
  height: 37px
  line-height: 40px
  background: $kabaLightBlue
  color: $kabaBlue
  border: 1px solid $kabaLightBlue
  -webkit-background-clip: padding-box

  .commands
    margin-top: 6px

  h3 
    position: absolute
    height: 18px
    left: 32px
    display: inline-block
    overflow: hidden
    margin-right: 3em 
    font-size: 12px
    font-weight: normal
    line-height: 18px  
    text-shadow: 1px 1px 2px rgba(255,255,255,.5)
    text-overflow: ellipsis
    white-space: nowrap
  
  
.widget-header [class^="icon-"], .widget-header [class*=" icon-"]
  position: relative
  margin-left: 13px
  margin-right: -2px
  font-size: 18px
  color: $kabaMiddleBlue

.widget-content 
  padding: 20px 15px 15px
  background: $white
  border: 1px solid $kabaLightBlue

.widget-header+.widget-content 
  border-top: none
  border-radius: top 0

.widget > .nav-tabs
    margin-bottom: 0
    border-bottom: 1px solid $kabaLightBlue

    + .widget-header
      border-top: none

/* Widget Content Clearfix */   
.widget-content:before,
.widget-content:after 
  content:""
  display:table

.widget-content:after 
  clear:both

/* For IE 6/7 (trigger hasLayout) */
.widget-content 
  zoom:1

.widget-nopad .widget-content 
  padding: 0

/* Widget Table */

.widget-table 
  .widget-content 
    padding: 0

  .table 
    margin-bottom: 0
    border: none

    tr td:first-child 
      border-left: none

    tr th:first-child 
      border-left: none



/* Widget Plain */

.widget-plain 
  background: transparent
  border: none

  .widget-content 
    padding: 0
    background: transparent  
    border: none


/* Widget Box */

.widget-container 
  .widget-content
    background: #F8F8F8
    border: none

    &.selectable
      cursor: pointer

      &:hover
        background: darken(#F7F7F7, 0.8)
    h3
      margin-bottom: 30px
      padding: 0 0 3px 0
      border-bottom: solid 1px $darkGray

      .commands
        i
          font-size: 20px

        i:hover
          color: $black

    .shortcuts .shortcut
      border: solid 1px #E8E8E8

.widget-box .widget-content.gray
  background: #E3E3E3