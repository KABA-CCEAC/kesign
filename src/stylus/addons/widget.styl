.widget    
  position: relative
  clear: both  
  width: auto  
  margin-bottom: 2em        
  overflow: hidden
  
.widget-header   
  position: relative  
  height: 37px
  line-height: 40px
  background: $kabaLightBlue
  color: $kabaBlue
  border: 1px solid $kabaLightBlue
  -webkit-background-clip: padding-box

  .commands
    margin-top: 6px

  h3 
    overflow: hidden
    margin-left: 13px
    margin-right: 13px
    font-size: 12px
    font-weight: normal
    line-height: 18px  
    text-shadow: 1px 1px 2px rgba(255,255,255,.5)
    text-overflow: ellipsis
    white-space: nowrap
  
  
.widget-header [class^="icon-"], .widget-header [class*=" icon-"]
  position: relative
  margin-left: 13px
  margin-right: -2px
  font-size: 18px
  color: $kabaMiddleBlue

.widget-header [class^="icon-"] + h3, .widget-header [class*=" icon-"] + h3
  position: absolute
  height: 18px
  left: 19px
  display: inline-block

.widget-content 
  padding: 20px 15px 15px
  background: $white
  border: 1px solid $kabaLightBlue

.widget-table
  background: $white
  border: 1px solid $kabaLightBlue

  > .widget-content
    border: none

.widget-header+.widget-content, .widget-header+.widget-table
  border-top: none
  border-radius: top 0

.widget > .nav-tabs
    margin-bottom: 0
    border-bottom: 1px solid $kabaLightBlue

    + .widget-header
      border-top: none

/* Widget Content Clearfix */   
.widget-content:before,
.widget-content:after 
  content:""
  display:table

.widget-content:after 
  clear:both

/* For IE 6/7 (trigger hasLayout) */
.widget-content 
  zoom:1

.widget-nopad .widget-content 
  padding: 0

/* Widget Table */

.widget-table 
  .widget-content 
    padding: 0

  .table
    margin-bottom: 1px
    border: none
    
    thead
      kabaWhite-gradient()

      th
        border-right: solid 1px $kabaLightBlue

    tr td:first-child 
      border-left: none

    tr th:first-child 
      border-left: none

    tr td:last-child 
      border-right: none

    tr th:last-child 
      border-right: none



/* Widget Plain */

.widget-plain 
  background: transparent
  border: none

  .widget-content 
    padding: 0
    background: transparent  
    border: none
