.login-page
  height: 100%
  position: relative
  kabaLightBlue-gradient()
  // http://css-tricks.com/perfect-full-page-background-image/
  background: url(../img/login_bg.jpg) no-repeat center -250px
  background-size: cover

  .login-content
    position: absolute
    height: 50%
    width: 100%
    bottom: 0
    background: $kabaBlue

    .brandbar
      position: absolute
      top: -80px
      height: 80px
      width: 100%
      background: rgba(255, 255, 255, 0.5)

      a.brand
        display: inline-block
        height: 80px
        width: 159px
        background: url(../img/kaba.gif) no-repeat

    .login-form
      width: 940px
      margin: 0 auto
      padding: 50px 0 0
      color: $kabaLightBlue

      form
        margin-bottom: 0

        legend
          font-size: 14px
          line-height: 22px
          color: $kabaLightBlue
          margin-bottom: 0
          border: none
          margin-bottom: 10px

          label.checkbox
            font-size: 10px
            margin-right: 5px

        .fields
          input[type="password"], input[type="text"]
            border-radius: 0
            box-shadow: inset 2px 2px 4px rgba(0, 0, 0, 0.2)

        .login-actions
          margin-top: 15px

          .btn
            position: relative
            padding-right: 30px

            &:hover
              background-image: linear-gradient(top, #F8F8F8 0%, #D1D1D1 100%);
              box-shadow: 1px 1px 2px rgba(255, 255, 255, 0.5);

            &::after
              position: absolute
              right: 5px
              top: 5px
              font-family: 'FontAwesome'
              content: "\f054"
              color: $kabaTextGray
              margin-right: 5px

      .login-hero
        display: inline-block
        margin: 0 auto
        font-family: Garamond, Times New Roman, serif
        font-size: 40px
        line-height: 45px
        padding: 20px 100px

        p
          margin: 0
      