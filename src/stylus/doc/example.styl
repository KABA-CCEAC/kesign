/* Bootstrap code examples
-------------------------------------------------- */

/* Base class */
.kesign-example
  position: relative
  margin: 15px 0
  padding: 39px 19px 14px
  *padding-top: 19px
  background-color: #fff
  border: 1px solid #ddd
  border-radius: 4px

/* Echo out a label for the example */
.kesign-example:after
  content: "Example"
  position: absolute
  top: -1px
  left: -1px
  padding: 3px 7px
  font-size: 12px
  font-weight: bold
  background-color: #f5f5f5
  border: 1px solid #ddd
  color: #9da0a4
  border-radius: 4px 0 4px 0

/* Remove spacing between an example and it's code */
.kesign-example + .prettyprint
  margin-top: -35px
  padding-top: 15px

/* Tweak examples
------------------------- */
.kesign-example > p:last-child
  margin-bottom: 0

.kesign-example
  &.kesign-example-brandbar
    .example-header
      box-shadow: 0 -3px 15px $kabaMiddleGray
      margin: 30px 0 50px

      .navbar-inner
        box-shadow: none

  .kesign-example-brandbar-fixed-wrapper
    position: relative
    box-shadow: 0 -3px 15px $kabaMiddleGray

    .example-header
      margin: 0px 0 50px
      box-shadow: none

    .header-fixed-top
      position: absolute

    .main
      overflow: scroll
      height: 200px

  &.kesign-example-page

    .kesign-example-page-wrapper
      box-shadow: 0 -3px 15px $kabaMiddleGray
      overflow: scroll
      height: 200px
      margin: 30px 0 50px

      .container
        width: 80%

  &.kesign-example-sidebar
    .sidebar
      float: none

  &.kesign-example-footer
    .footer
      margin: 70px 0 20px